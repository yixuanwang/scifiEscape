

<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <meta charset="utf-8">
            <title>Create Game</title>
            <link rel="stylesheet" type="text/css" href="/css/style.css">
            <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
            <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    </head>

    <body>
        <div class="container" id="create-page">

            <div class="row">
                <div class="col-12">
                    <h1>Room Code</h1>
                </div>
            </div>
            
            <hr>
            <div class="row" id="content">
                <div class="col-6" id="players">
                    <h2>Players</h2>
                    <form action ="" id="map-form">
                        <ul id="dynamic-list"></ul>
                    </form>
                    <button type="button" class="btn btn-outline-secondary" id="kickBtn">Kick</button>
                </div>

                <div class="col-6" id="maps">
                    <h2>Maps</h2>
                    <form action ="" id="map-form">
                        <ul id="map-list">
                            <li id="map-item"><input type="radio" name="map" value="1"> Map 1<br></li>
                            <li id="map-item"><input type="radio" name="map" value="2"> Map 2<br></li>
                        </ul>
                    </form>
                    <button type="button" class="btn btn-outline-secondary" id="playBtn">Play</button>
                </div>
            </div>
            <hr>

        </div>

    <script>
        // Make a request for all users
        var userNames = [];

        axios.get('/get-players')
        .then(function (response) {
            userNames.push(response);
            addItem();
        })
        .catch(function (error) {
            console.log(error);
        });

        function getUsers() {
            return axios.get('/get-players');
        }

        function addItem(){
            var ul = document.getElementById("dynamic-list");
            var li = document.createElement("li");
            var user = userNames.pop();
            var radio = document.createElement("input");
            li.setAttribute('id', "map-item");
            radio.setAttribute("type","radio");
            radio.setAttribute("name","map");
            li.appendChild(radio);
            li.appendChild(document.createTextNode(user));
            ul.appendChild(li);
        }
    </script>
    </body>

</html>